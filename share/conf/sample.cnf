# Sample configuration file for Web:Extend applications
# You can use, modify or redistribute it freely

# Global settings

autoload.path	= //app/php
aliases.file	=
timezone		= UTC

# Application settings

app.toppage = toppage

# Database settings

db.driver	= weePgSQLDatabase
db.host		= localhost
db.user		= username
db.password	= password
db.dbname	= dbname

# Mail settings

mail.debug.to =
mail.debug.reply-to =

# Output settings

output.driver		= weeXHTMLOutput
output.cache.path	= //app/tmp/appcache
output.cache.expire	= 300
output.gzip			= 1

# Session settings

session.driver		= weeSession
session.check.ip	= 1
session.check.token	= 1
